generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  NEW_BORN
  YOUNG
  ADULT
  OLD
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum Energy {
  LOW
  MEDIUM
  HIGH
}

model Image {
  id       String  @id @default(uuid())
  publicId String  @unique
  format   String
  version  String
  pet      Pet?    @relation(fields: [pet_id], references: [id])
  pet_id   String?

  @@map("images")
}

model Pet {
  id           String   @id @default(uuid())
  name         String
  about        String   @db.VarChar(300)
  age          Age
  size         Size
  energy       Energy
  requirements String[]
  images       Image[]
  created_at   DateTime @default(now())
  org          Org?     @relation(fields: [org_id], references: [id])
  org_id       String?

  @@map("pets")
}

model Org {
  id            String   @id @default(uuid())
  owner         String
  email         String   @unique
  cep           String   @db.VarChar(8)
  address       String   @db.VarChar(150)
  uf            String   @db.Char(2)
  city          String   @db.VarChar(50)
  latitude      Decimal
  longitude     Decimal
  cellphone     String   @db.VarChar(14)
  created_at    DateTime @default(now())
  password_hash String
  pets          Pet[]

  @@map("orgs")
}
